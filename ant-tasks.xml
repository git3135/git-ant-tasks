<?xml version="1.0" encoding="UTF-8"?>
<project name="git-ant-tasks">

    <property file="build.properties"/>

    <path id="jgit-libs">
        <pathelement location="lib/org.eclipse.jgit.ant-2.2.0.201212191850-r.jar"/>
        <pathelement location="lib/org.eclipse.jgit-2.3.1.201302201838-r.jar"/>
        <pathelement location="lib/jsch-0.1.49.jar"/>
    </path>

    <taskdef resource="com/scalepoint/git/ant/git-ant-tasks.properties">
        <classpath>
            <pathelement location="artifact/ant-git-tasks.jar"/>
            <path refid="jgit-libs"/>
        </classpath>
    </taskdef>

    <target name="git-clone">
        <git-clone destination="${local.repository}"
                   username="${username}"
                   password="${password}"
                   uri="${uri}"/>
    </target>

    <target name="git-commit-push">
        <git-commit email="${email}"
                    message="${commit.message}"
                    repository="${local.repository}"
                    username="${username}"
                />

        <git-push repository="${local.repository}"
                  username="${username}"
                  password="${password}"
                />
    </target>

    <target name="git-push">
        <git-push repository="${local.repository}"
                  username="${username}"
                  password="${password}"
                />
    </target>

    <target name="git-pull">
        <git-pull repository="${local.repository}"
                  username="${username}"
                  password="${password}"/>
    </target>

</project>